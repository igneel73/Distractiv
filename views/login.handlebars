<!doctype html>

<html>
<head>
	<title>Login</title>
	{{> header}}
	{{> facebook}}
	<script src="/js/facebook.js"></script>
	<!-- Google Analytics -->
	<script>
	(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

	ga('create', 'UA-135786625-1', 'auto');
	ga('send', 'pageview');
	</script>
	<!-- End Google Analytics -->
	</head>
	<body>
	<div class="text-center">
		<h4 class="screen-heading center-align p-3 m-0 shadow-md">
			distrACTIV
		</h4>
		<hr class="m-0">

		<form class="login p-5 my-5" action="./home" method="get">
			<h5 class="m-2">Login To Existing Account</h5>
			<input id="log-name" class="p-1 mx-3 my-2" type="text" name="user" placeholder="User Name">
			<input id="log-pass" class="p-1 mx-3 my-2" type="password" name="pass" placeholder="Password"> 
			<input data-toggle="modal" data-target="#" id="log" class="m-3 px-3 py-1" type="submit" name="login" value="Login">
			<input class="signup-btn m-3 px-3 py-1" type="button" name="signup" value="Sign Up">
		</form> 
		<form class="signup p-5 my-5" action="./home" method="get">
			<h5 class="m-2">Create An Account</h5>
			<input id="inputEmail" class="p-1 mx-3 my-2" type="email" name="email" placeholder="example@email.com">
			<input id="sig-name" class="p-1 mx-3 my-2" type="text" name="user" placeholder="User Name">
			<input id="passWord" class="p-1 mx-3 my-2" type="password" name="pass" placeholder="Password"> 
			<input data-toggle="modal" data-target="#" id="sig" class="m-3 px-3 py-1" type="submit" name="signup" value="Sign Up">
			<input class="login-btn m-3 px-3 py-1" type="button" name="login" value="Back to Login Page">
		</form>
		
		<div class="social-login">
			<fb:login-button button-type="continue_with" size="large" scope="public_profile,email" onlogin="checkLoginState();">
			</fb:login-button>
		</div>

		<!-- required sign up modal -->
		<div class="modal fade" id="logAndSignReq" tabindex="-1">
			<div class="modal-dialog modal-dialog-centered">
			    <div class="modal-content">
			      <div class="modal-body">
			        <p>All fields are required to sign up.</p>
			      </div>
			    </div>
			</div>
		</div>

		<!-- incorrect login modal -->
		<div class="modal fade" id="notFound" tabindex="-1">
			<div class="modal-dialog modal-dialog-centered">
			    <div class="modal-content">
			      <div class="modal-body">
			        <p>Incorrect User Name or Password</p>
			      </div>
			    </div>
			</div>
		</div>

		<!-- user already exists modal -->
		<div class="modal fade" id="userExists" tabindex="-1">
			<div class="modal-dialog modal-dialog-centered">
			    <div class="modal-content">
			      <div class="modal-body">
			        <p>User Name already exists. Please input a diffrent one.</p>
			      </div>
			    </div>
			</div>
		</div>

	</div>
	<script type="text/javascript" src="/js/login.js"></script>
</body>
</html>